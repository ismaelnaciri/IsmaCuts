<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:forceDarkAllowed="false"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:icon="@drawable/barber_logo"
        android:roundIcon="@drawable/barber_logo"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.IsmaCuts">
        <activity
            android:name=".admins.AdminsMainActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.IsmaCuts"
            />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recycler.SelectedUser"
            android:exported="false"
            android:theme="@style/Base.Theme.IsmaCuts"/>
        <activity
            android:name=".recycler.RecyclerActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.IsmaCuts"/>
        <activity
            android:name=".main_screen.MainScreenActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.IsmaCuts"
            />
        <activity
            android:name=".login.LoginActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.IsmaCuts"/>
        <activity
            android:name=".register.RegisterActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.IsmaCuts"/>
        <activity
            android:name=".users.UsersMainActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.IsmaCuts"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>