<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.AdminDataFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profileBookingFragmentToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?android:attr/homeAsUpIndicator"
            app:title="Admin Stats"
            app:titleTextColor="?attr/textColor" />

        <TextView
            android:id="@+id/adminSpecialFragmentIntroductoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="My Stats"
            android:textColor="?attr/textColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileBookingFragmentToolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/adminDataQuoteRV"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminSpecialFragmentIntroductoryTV"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
