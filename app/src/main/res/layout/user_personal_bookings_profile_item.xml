<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="35dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_gradient"
                >

                <LinearLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:id="@+id/myBookingDateTextLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date:"
                        android:gravity="start"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/myBookingDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="date per se"
                        android:gravity="end"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/serviceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dateLayout"
                    >

                    <TextView
                        android:id="@+id/myBookingServiceTextLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Service:"
                        android:gravity="start"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/myBookingService"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="service per se"
                        android:gravity="end"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/professionalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/serviceLayout"
                    >
                    <TextView
                        android:id="@+id/myBookingProfessionalTextLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Professional:"
                        android:gravity="start"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/myBookingProfessional"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="prof per se"
                        android:gravity="end"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/amountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/professionalLayout"
                    >


                    <TextView
                        android:id="@+id/myBookingAmountTextLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Amount:"
                        android:gravity="start"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/myBookingAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="amount per se"
                        android:gravity="end"
                        android:textColor="?attr/textColor"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>